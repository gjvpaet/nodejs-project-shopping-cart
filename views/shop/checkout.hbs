<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <h1>Checkout</h1>
        <h4>Your Total: ${{total}}</h4>
        <div id="charge-error" class="alert alert-danger {{#if noErrors}}hidden{{/if}}">
            {{errMsg}}
        </div>
        <form action="/checkout" method="post" id="checkout-form">
            <div class="row">
                <div class="col-xs-12">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <label for="name" class="mdl-textfield__label">Name</label>
                        <input type="text" class="mdl-textfield__input" id="name" required name="name">
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <label for="address" class="mdl-textfield__label">Address</label>
                        <input type="text" class="mdl-textfield__input" id="address" required name="address">
                    </div>
                </div>
                <hr>
                <div class="col-xs-12">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <label for="card-name" class="mdl-textfield__label">Card Holder Name</label>
                        <input type="text" class="mdl-textfield__input" id="card-name" required>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <label for="card-number" class="mdl-textfield__label">Credit Card Number</label>
                        <input type="number" class="mdl-textfield__input" id="card-number" required>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <label for="card-expiry-month" class="mdl-textfield__label">Expiration Month</label>
                                <input type="text" class="mdl-textfield__input" id="card-expiry-month" required>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <label for="card-expiry-year" class="mdl-textfield__label">Expiration Year</label>
                                <input type="text" class="mdl-textfield__input" id="card-expiry-year" required>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        <label for="card-cvc" class="mdl-textfield__label">CVC</label>
                        <input type="text" class="mdl-textfield__input" id="card-cvc" required>
                    </div>
                </div>
            </div>
            <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
                Buy now
            </button>
        </form>
    </div>
</div>

<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript" src="javascripts/checkout.js"></script>